#include<stdio.h>

void rightTriangle(int n);

int main(){
	
	int number;
	
	printf("enter a number: ");
	scanf("%d", &number);
	
	rightTriangle(number);
	
	return 0;
}

void rightTriangle(int n){
	
	int i, j;
	int yildizSayisi = 1;
	
	for(j = 0; j < n; j++){
		
		for(i = 1; i <= yildizSayisi; i++){
			printf("*");
		}
			yildizSayisi++;
			printf("\n");
	}
	
}

