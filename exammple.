#include <stdio.h>
int main (void){

int grade1, grade2;
double average;
char have_exam;

printf("grade1,grade2: ");
scanf("%d %d",&grade1,&grade2);

average=(grade1+grade2)/2;

if(average>50){
	printf("successful.");
	return 0;
}


 if(average<50){
 	printf("Did you have an exame before?(y/n)");
 	scanf(" %c",&have_exam);
 }
 switch(have_exam){
 	case 'y': {
 			printf("unsuccessful");
		break;
	 }
	 default: {
	 		printf("Unsuccesful. But you have a chance");
		break;
	 }
		 
 }}

