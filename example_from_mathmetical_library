#include<stdio.h>
#include <math.h>
#define PI 3.141592
int main (void)
{
	
	//write the assignment statement to find the length of triangle
	
double a,b,c;
int alpha;

printf("Enter number for b:");
scanf("%lf",&b);

printf("Enter number for c:");
scanf("%lf",&c);

printf("Enter a number for angle");
scanf("%d",&alpha);


	a=sqrt(b*b+c*c-2*b*cos(alpha*PI/180));
	
	printf("The 'a'is %f",a);
	
	return 0;
}
