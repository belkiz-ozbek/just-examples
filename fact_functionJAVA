package ders14;

/**
 *
 * @author belkizozbek
 */
public class Ders14 {

    public static int factoriyel(int a){
        
        int fact = 1;
        while(a > 0){
            fact *= a;
            a--;
        }
        return fact;
    }
    
    public static void main(String[] args) {
        // TODO code application logic here
        
         System.out.println(5 + "! =" + factoriyel(5));
        
    }
    
}
