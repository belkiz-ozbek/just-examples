#include <stdio.h>
#include <math.h>
int main (void)
{
	int i=0;
	double x;
	double sum=0;
	
	printf("please, enter a number other than zero: ");
	scanf("%lf",&x);
	
	while(x==0){
		printf("\n zero is not allowed as input!! Please reenter: ");
		scanf("%lf",&x);
	}
	
	for(i=0; i>=-100; i--){
		sum+=1/pow(x,i);	
	}
	printf("\n sum is %f",sum);
}

