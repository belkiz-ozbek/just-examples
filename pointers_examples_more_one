EXAMPLE 1;

#include<stdio.h>
#include<stdlib.h>

int main (){
	
	int a = 10;
	int *p;
	
	p = &a;
	
	printf("%d\n", *p);
	printf("%d\n", p);
	printf("%d\n", a);
	printf("%d\n", &a);
	printf("%d\n", &p);
	
	return(0);
}

