#include <stdio.h>
#include <stdlib.h>
#define PI 3.1416

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {

int a, b, c, k;
a = 7.5;
b = 8.2;
c = 10.5;
while(a > 0){
	if(c>b){
		for(k = a; k < c; k += 2){
			b += k;
			printf("%d\n",b);
		}
		printf("%d\n",k);
	}
	else
	{
		for(k = b; k > a; k -= 10){
			c += k;
			printf("%d\n",c);
		}
		printf("%d\n",k);
	}
	a -= 5; 
}
printf("%d\n",a);



	return 0;
}
